
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Public collections are readable by anyone, but writable only by authenticated users.
    match /documents/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /jurisdictions/{jurisdiction} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /articles/{article} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Community content requires authentication to read and write.
    // This protects user-submitted data while allowing community interaction.
    match /insights/{insight} {
      allow read, write: if request.auth != null;
    }

    match /requests/{request} {
      allow read, write: if request.auth != null;
    }
  }
}
